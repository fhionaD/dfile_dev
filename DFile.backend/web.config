<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true">
        <remove name="WebDAVModule" />
      </modules>
      <handlers>
        <remove name="WebDAV" />
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <!--
        processPath: Use the generated .exe directly.
          DO NOT use 'dotnet' â€” it is not guaranteed to be in PATH on IIS shared hosting (e.g. MonsterASP.NET).
          The .exe is produced by: dotnet publish -r win-x64 --self-contained false
        hostingModel: outofprocess is more compatible with shared Windows hosting.
          inprocess requires full control of the app pool which shared hosting often restricts.
        stdoutLogEnabled: Set to true only for troubleshooting. Logs go to .\logs\stdout_*.log
      -->
      <aspNetCore processPath=".\dfile.backend.exe"
                  arguments=""
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="outofprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>
