<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true">
        <remove name="WebDAVModule" />
      </modules>
      <handlers>
        <remove name="WebDAV" />
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <!--
        Self-contained deployment: dfile.backend.exe includes the .NET 8 runtime.
        processPath points to the exe directly - no 'dotnet' in PATH needed.
        hostingModel inprocess: app runs inside w3wp.exe worker process (no
        separate Kestrel process to spawn - more compatible with shared hosting
        where spawning child processes may be restricted).
        stdoutLogEnabled: logs startup errors to .\logs\stdout_*.log on the server.
      -->
      <aspNetCore processPath=".\dfile.backend.exe"
                  arguments=""
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>
